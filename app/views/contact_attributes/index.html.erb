<p id="notice"><%= notice %></p>

<h1>Contact Attributes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Datatype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_attributes.each do |contact_attribute| %>
      <tr>
        <td><%= contact_attribute.name %></td>
        <td><%= datatype_label contact_attribute.datatype %></td>
        <td><%= link_to 'Show', contact_attribute %></td>
        <td><%= link_to 'Edit', edit_contact_attribute_path(contact_attribute) %></td>
        <td><%= link_to 'Destroy', contact_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact Attribute', new_contact_attribute_path, class: 'btn btn-primary' %>
